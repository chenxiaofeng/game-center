<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/share_file_tips_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/share_file_tips"
            android:textColor="#787878"
            android:textSize="@dimen/share_file_tips_size" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/share_btn_height"
            android:layout_marginTop="@dimen/share_file_tips_margin_top" >

            <Button
                android:id="@+id/sharing_send_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/selector_btn_and_progress_theme"
                android:text="@string/send"
                android:textColor="#fff"
                android:textSize="@dimen/text_sub_large_size" />

            <ImageView
                android:id="@+id/iv_share_pendant"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/ic_btn_pendant"
                android:contentDescription="@null" />
        </FrameLayout>

        <Button
            android:id="@+id/sharing_receive_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/share_btn_height"
            android:layout_marginTop="@dimen/share_btn_margin_top"
            android:background="@drawable/selector_share_receive_btn"
            android:text="@string/receive"
            android:textSize="@dimen/text_sub_large_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/share_icon_margin_bottom"
            android:gravity="bottom" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btn_invitation"
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_share_invitation_btn"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invitation_btn_text"
                    android:textColor="#787878"
                    android:textSize="@dimen/share_icon_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btn_guide"
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_share_guide_btn"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_btn_text"
                    android:textColor="#787878"
                    android:textSize="@dimen/share_icon_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btn_history"
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_share_history_btn"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_btn_text"
                    android:textColor="#787878"
                    android:textSize="@dimen/share_icon_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5" />

</LinearLayout>