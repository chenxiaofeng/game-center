<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/pic_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pic_image_h"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_wallpaper_back"
        android:gravity="center_horizontal"
        android:text="@string/pic_edit_back"
        android:textColor="@color/white"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/pic_check"
        android:layout_width="@dimen/checkbox_w"
        android:layout_height="@dimen/checkbox_h"
        android:layout_alignParentRight="true"
        android:button="@drawable/selector_option_btn"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout>