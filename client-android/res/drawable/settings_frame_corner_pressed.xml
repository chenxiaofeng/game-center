<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景色 -->
    <solid android:color="@color/app_theme_slected_color" />

    <!-- 边框色 -->
    <stroke
        android:width="0.1dp"
        android:color="@color/app_theme_slected_color" />

    <!-- padding -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!-- 圆角弧度 -->
    <corners
        android:bottomLeftRadius="8dip"
        android:bottomRightRadius="8dip"
        android:topLeftRadius="0dip"
        android:topRightRadius="0dip" />

</shape>