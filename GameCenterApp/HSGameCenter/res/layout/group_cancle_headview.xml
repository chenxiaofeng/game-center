<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/nui_text_size_little"
        android:layout_marginTop="@dimen/nui_text_size_little"
        android:gravity="center"
        android:textColor="@color/csl_black_7f"
        android:textSize="@dimen/csl_text_size_large" />

    <View
       style="@style/ViewDividerHorizontal"/>

</LinearLayout>