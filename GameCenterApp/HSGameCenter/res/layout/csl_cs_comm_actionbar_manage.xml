<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/manage_icon"
            android:layout_width="@dimen/csl_actionbar_imagebutton_size"
            android:layout_height="@dimen/csl_actionbar_imagebutton_size"
            android:layout_gravity="center"
            android:src="@drawable/csls_comm_actionbar_manage_icon"/>

        <TextView 
		    android:id="@+id/tip_accoute_view"
			android:layout_width="@dimen/tip_point_size"
            android:layout_height="@dimen/tip_point_size"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/csl_white"
            android:gravity="center"
            android:background="@drawable/shape_message_tips_bg"
            android:textSize="@dimen/csl_tip_accoute_view_text_size"
            android:text="40"/>
    </FrameLayout>

</merge>