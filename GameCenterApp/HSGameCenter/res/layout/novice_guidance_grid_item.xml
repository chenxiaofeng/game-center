<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/white"
			  android:gravity="center_horizontal"
			  android:orientation="vertical"
			  android:padding="@dimen/list_padding">

	<!-- this round imageView need optimize oddshou -->

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/app_icon"
			android:layout_width="@dimen/icon_size"
			android:layout_height="@dimen/icon_size"
			android:layout_gravity="center"
			android:src="@drawable/app_icon_default"/>

		<ImageView
			android:id="@+id/app_icon_mask"
			android:layout_width="@dimen/icon_size"
			android:layout_height="@dimen/icon_size"
			android:src="@drawable/icon_mask"/>
	</RelativeLayout>



	<TextView
		android:id="@+id/app_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/padding_little"
		android:ellipsize="end"
		android:singleLine="true"
		android:textSize="@dimen/nui_text_size_small"
		/>

	<TextView
		android:id="@+id/app_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding_little"
		android:ellipsize="end"
		android:singleLine="true"
		android:textColor="@color/csl_black_7f"
		android:textSize="@dimen/nui_text_size_micro"/>

	<CheckBox
		android:id="@+id/edit_check_box"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/icon_checkbox"
		android:button="@null"
		android:clickable="false"
		android:focusable="false"
		android:focusableInTouchMode="false"/>

</LinearLayout>