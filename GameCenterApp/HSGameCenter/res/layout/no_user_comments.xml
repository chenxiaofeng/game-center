<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/no_comments_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_user_comment_no"
            android:textColor="@color/csl_black_4c"
            android:textSize="@dimen/csl_text_size_large" />

        <Button
            android:id="@+id/commentBuuton"
            style="@style/SomeGreenButton"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"          
            android:text="@string/app_user_no_comment_button"
            android:textSize="@dimen/normal_button_text_size" />
    </LinearLayout>

</RelativeLayout>