<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/csl_button_corners_radius" />

            <solid android:color="@color/cs_btn_red_press" />

            <padding android:bottom="5dp" android:left="@dimen/csl_cs_padding_half_size" android:right="@dimen/csl_cs_padding_half_size" android:top="5dp" />

            <stroke android:width="1px" android:color="@color/cs_btn_red_stroke" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/csl_button_corners_radius" />

            <solid android:color="@color/cs_btn_red_normal" />

            <padding android:bottom="5dp" android:left="@dimen/csl_cs_padding_half_size" android:right="@dimen/csl_cs_padding_half_size" android:top="5dp" />

            <stroke android:width="1px" android:color="@color/cs_btn_red_stroke" />
        </shape>
    </item>
    <!-- item android:drawable="@drawable/csl_button_red_press" android:state_pressed="true"/>
    <item android:drawable="@drawable/csl_button_red"/-->

</selector>