    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            >
            <corners
                android:bottomRightRadius="@dimen/download_tab_color"
                android:topRightRadius="@dimen/download_tab_color"/>
            <solid
                android:color="@color/color_download_tab_press"/>
            <stroke android:color="@color/color_download_tab_frame"
                android:width="1px"/>
            <padding android:left="16dp"
                android:right="16dp"
                />

        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
