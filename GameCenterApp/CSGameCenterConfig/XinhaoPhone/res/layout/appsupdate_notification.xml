<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout 
     		  xmlns:android="http://schemas.android.com/apk/res/android"          
              android:layout_width="match_parent"    
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/transparent">
              <LinearLayout 
              android:layout_width="match_parent"    
              android:layout_height="0dp"
              android:layout_weight="1"
              android:background="@color/transparent"/> <!-- 为了居中 -->
                 
 <LinearLayout         
              android:layout_width="match_parent"    
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/transparent"
              android:layout_marginTop="8dp"
              android:paddingLeft="@dimen/notify_padding_left"
              android:paddingRight="@dimen/notify_padding_right"
              >
    <ImageView android:id="@+id/image"    
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:background="@mipmap/icon"
               android:layout_gravity="center_vertical"
               />   
    <LinearLayout         
              android:layout_width="0dp"
              android:layout_weight="1"    
              android:layout_height="wrap_content"
              android:orientation="vertical" 
              android:layout_gravity="center_vertical"
              android:gravity="left|center_vertical"
              android:layout_marginLeft="@dimen/csl_cs_padding_half_size">
              <TextView
               android:id="@+id/title"
			   android:layout_width="wrap_content"    
               android:layout_height="match_parent" 
               android:textSize="@dimen/notify_title_size"
               android:textColor="@color/white"/>  
              <TextView
               android:id="@+id/content"
			   android:layout_width="wrap_content"    
               android:layout_height="match_parent" 
               android:textSize="@dimen/notify_content_size"
               android:singleLine="true"
               android:ellipsize="end"
               android:textColor="#999999"/> 
     </LinearLayout>
     <RelativeLayout 
         	   android:layout_width="wrap_content"    
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/list_view_item_spacing">
     <FrameLayout 
              android:layout_width="62dp"    
               android:layout_height="25dp"
               android:layout_centerInParent="true">         
         <ImageView 
              android:id="@+id/iv_onkeyupdate"   
               android:layout_width="match_parent"    
               android:layout_height="match_parent"
               android:paddingLeft="6dp"
               android:paddingRight="6dp"
               android:text="@string/onekeyupdate"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:background="@drawable/btn_install_btn_selector"
               />
           <TextView 
               android:layout_width="match_parent"    
               android:layout_height="match_parent"
               android:paddingLeft="6dp"
               android:paddingRight="6dp"
               android:text="@string/onekeyupdate"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:layout_gravity="center"
               android:gravity="center"/>
         </FrameLayout> 
     </RelativeLayout>
</LinearLayout>
              <LinearLayout 
              android:layout_width="match_parent"    
              android:layout_height="0dp"
              android:layout_weight="1"
              android:background="@color/transparent"/> <!-- 为了居中 -->
</LinearLayout>