<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!-- <corners android:radius="2dip"/> -->
            <gradient android:startColor="#cbcbcb" android:endColor="#cbcbcb" android:angle="270.0" android:centerY="0.75" android:centerColor="#cbcbcb" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip> 
            <shape>
                <!-- <corners android:radius="2dip" />  -->
                <gradient android:startColor="#8eaa1e" android:endColor="#8eaa1e" android:angle="90.0" android:centerY="0.75" android:centerColor="#3CB371" /> 
            </shape>
        </clip>
    </item> 
    <item android:id="@android:id/progress">
        <clip>
            <shape> 
                <!-- <corners android:radius="2dip" /> --><!-- green color -->
                <gradient android:startColor="#8eaa1e" android:endColor="#8eaa1e" android:angle="270.0" />
            </shape>
        </clip>
    </item> 
</layer-list>