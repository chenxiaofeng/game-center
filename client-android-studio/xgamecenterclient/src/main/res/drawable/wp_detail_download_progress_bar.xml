<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dip" />

            <gradient
                android:angle="270.0"
                android:centerColor="#60000000"
                android:centerY="0.75"
                android:endColor="#60000000"
                android:startColor="#60000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dip" />

                <gradient
                    android:angle="90.0"
                    android:centerColor="#3CB371"
                    android:centerY="0.75"
                    android:endColor="#3CB371"
                    android:startColor="#3CB371" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" /> 
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/app_theme_color"
                    android:startColor="@color/app_theme_color" />
            </shape>
        </clip>
    </item>

</layer-list>