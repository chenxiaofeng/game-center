<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_bar_bg_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/noti_icon"
        android:layout_width="@dimen/noti_icon_size"
        android:layout_height="@dimen/noti_icon_size"
        android:layout_margin="@dimen/noti_content_margin"
        android:contentDescription="@null"
        android:src="@drawable/mas_ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/noti_content_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/noti_title_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/noti_sub_title_margin_top" >

            <TextView
                android:id="@+id/noti_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/noti_sub_title_text_size" />

            <TextView
                android:id="@+id/noti_drag_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_size"
                android:textColor="#999999"
                android:textSize="@dimen/noti_sub_title_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/noti_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/noti_content_desc_margin"
            android:layout_marginTop="@dimen/noti_content_desc_margin"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="#ccc"
            android:textSize="@dimen/text_big_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/text_margin_size"
            android:background="#333" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/noti_install_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/notification_btn_selector"
                android:gravity="center"
                android:padding="@dimen/noti_btn_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_noti_install"
                    android:gravity="center_vertical"
                    android:text="@string/notification_install_btn_text"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_big_size" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/text_margin_size"
                android:layout_marginTop="@dimen/text_margin_size"
                android:background="#333" />

            <LinearLayout
                android:id="@+id/noti_detail_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/notification_btn_selector"
                android:gravity="center"
                android:padding="@dimen/noti_btn_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_noti_detail"
                    android:gravity="center_vertical"
                    android:text="@string/notification_detail_btn_text"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_big_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
