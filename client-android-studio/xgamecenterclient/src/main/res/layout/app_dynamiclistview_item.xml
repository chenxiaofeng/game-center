<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dynamic_item_padding"
    android:paddingBottom="@dimen/dynamic_item_padding"
    android:paddingLeft="@dimen/common_padding" 
    android:paddingRight="@dimen/common_padding" >

    <ImageView
        android:id="@+id/iv_country_logo"
        android:layout_width="@dimen/app_cover_size"
        android:layout_height="@dimen/app_cover_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_app_logo"
        android:layout_toRightOf="@+id/iv_country_logo"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="@dimen/common_padding"
            android:singleLine="true"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dynamiclistview_title1_textsize"  />

        <TextView
            android:layout_below="@+id/tv_country_name"
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="@dimen/common_padding"
            android:singleLine="true"
            android:textColor="#ff7800"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="@dimen/app_cover_size"
        android:layout_height="@dimen/app_cover_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:contentDescription="@null" />

</RelativeLayout>