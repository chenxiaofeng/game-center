<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <!-- username -->

                <TextView
                    android:id="@+id/tv_commenter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#787878"
                    android:textSize="@dimen/text_mid_size" />

                <!-- comments -->

                <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_small_margin_size"
                    android:textColor="#383838"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="right|center_vertical" >

                <RatingBar
                    android:id="@+id/rb_comment_stars"
                    style="@style/AppCommon.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- comment time and device model -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_small_margin_size"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:textSize="@dimen/text_small_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <TextView
                    android:id="@+id/tv_device_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#787878"
                    android:textSize="@dimen/text_small_size" />

                <TextView
                    android:id="@+id/tv_device_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_size"
                    android:gravity="right"
                    android:textColor="#787878"
                    android:textSize="@dimen/text_small_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>