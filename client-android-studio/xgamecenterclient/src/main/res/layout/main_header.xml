<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_header_default_height"
    android:background="@drawable/nav_bg" >

    <ImageView
        android:id="@+id/title_pendant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_title_pendant"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/mh_navigate_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_item_theme"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/mh_slidingpane_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_title_user_center"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/mh_notification_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="8dp"
                android:contentDescription="@null"
                android:background="@drawable/notification"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_small_size"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding"
            android:background="@drawable/ic_stat"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/mh_navigate_title_tv"
            style="@style/mytitleTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginRight="@dimen/common_padding"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mh_search_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_item_theme"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/mh_search_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/ic_actionbar_search"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/mh_qr_code_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/ic_qr_code_scan"
            android:contentDescription="@null"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mh_download_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/ic_actionbar_download"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>