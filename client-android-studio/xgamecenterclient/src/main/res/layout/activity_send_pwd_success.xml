<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_drawable"
    android:orientation="vertical" >

    <include
        android:id="@+id/rl_title_bar"
        layout="@layout/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_send_success_main_layout_height"
            android:layout_marginTop="@dimen/text_margin_size"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/send_pwd_success_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_big_size"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/tab_title_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/send_pwd_success_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_big_size"
                    android:layout_weight="4"
                    android:textSize="@dimen/sub_title_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_big_size"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/send_pwd_success_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/account_btn_layout_height"
                    android:layout_marginTop="@dimen/text_big_size"
                    android:layout_weight="25"
                    android:background="@drawable/selector_btn_and_progress_theme"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_size"
                    android:text="@string/login"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/title_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/tv_open_browser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_big_size"
                    android:layout_weight="1"
                    android:background="@drawable/account_selector_open_brower_btn"
                    android:padding="@dimen/text_margin_size"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" />
    </LinearLayout>

</LinearLayout>