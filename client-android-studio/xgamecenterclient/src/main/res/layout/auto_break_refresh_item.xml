<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/keyword_layout_height"
    android:background="@drawable/selector_search_refresh_btn" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyword_item_text_padding"
        android:layout_marginRight="@dimen/keyword_item_text_padding"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageView
            android:id="@+id/res_logo"
            android:layout_width="@dimen/keyword_icon_size"
            android:layout_height="@dimen/keyword_icon_size"
            android:layout_marginRight="2dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_search_refresh" />

        <TextView
            android:id="@+id/res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/search_refresh_text"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_big_size" />
    </LinearLayout>

</LinearLayout>