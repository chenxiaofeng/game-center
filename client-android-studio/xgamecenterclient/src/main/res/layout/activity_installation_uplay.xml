<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_drawable" >

    <include
        android:id="@+id/rl_title_bar"
        layout="@layout/main_header" />

    <TextView
        android:id="@+id/shareFreeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/share_free_margin_top"
        android:layout_marginTop="@dimen/share_free_margin_top"
        android:gravity="center"
        android:text="@string/sharing_invitation_title"
        android:textSize="@dimen/share_free_textsize" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/shareFreeTv"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 第一行 -->

            <LinearLayout
                android:id="@+id/firstRowLl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sf_row_margin"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/oneItemll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sf_linearlayout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/share_way"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/sf_iv_size"
                        android:layout_height="@dimen/sf_iv_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sf_item_margin"
                        android:src="@drawable/installation_sharefree" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/sf_item_margin"
                        android:gravity="center"
                        android:text="@string/page_share_title"
                        android:textSize="@dimen/share_free_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoItemll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sf_linearlayout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/share_way"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/sf_iv_size"
                        android:layout_height="@dimen/sf_iv_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sf_item_margin"
                        android:src="@drawable/installation_sms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/sf_item_margin"
                        android:gravity="center"
                        android:text="@string/sharing_invitation_sms2"
                        android:textSize="@dimen/share_free_textsize" />
                </LinearLayout>
            </LinearLayout>

            <!-- 第二行 -->

            <LinearLayout
                android:id="@+id/secondRowLl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/threeItemll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sf_linearlayout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/share_way"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/sf_iv_size"
                        android:layout_height="@dimen/sf_iv_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sf_item_margin"
                        android:src="@drawable/installation_browser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/sf_item_margin"
                        android:gravity="center"
                        android:text="@string/sharing_invitation_browser"
                        android:textSize="@dimen/share_free_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourItemll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sf_linearlayout_margin"
                    android:layout_weight="1"
                    android:background="@drawable/share_way"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/sf_iv_size"
                        android:layout_height="@dimen/sf_iv_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sf_item_margin"
                        android:src="@drawable/installation_orcode" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/sf_item_margin"
                        android:gravity="center"
                        android:text="@string/sharing_invitation_orcode"
                        android:textSize="@dimen/share_free_textsize" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 中间文字 -->

        <TextView
            android:id="@+id/middleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/selector_theme_text_link"
            android:textSize="@dimen/share_free_textsize" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/browserIv"
                android:layout_width="@dimen/sf_browser_width"
                android:layout_height="@dimen/sf_browser_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/sf_marginMiddleTv"
                android:background="@drawable/browser_tips"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/scanIv"
                android:layout_width="@dimen/sf_code_width"
                android:layout_height="@dimen/sf_code_height"
                android:layout_gravity="center"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sf_invitation_tips_marginbottom"
        android:layout_marginTop="5dp"
        android:text="@string/sharing_invitation_tips"
        android:textColor="@color/gray"
        android:textSize="@dimen/share_free_textsize" />

</RelativeLayout>