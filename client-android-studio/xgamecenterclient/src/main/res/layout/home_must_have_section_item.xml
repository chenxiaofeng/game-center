<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_bg_drawable"
    android:orientation="vertical"
    android:padding="@dimen/common_padding" >

    <RelativeLayout
        android:id="@+id/hmhi_catalog_ll"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/app_bg_drawable"
        android:orientation="horizontal" >

        <View
            android:id="@+id/divider_bar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/title_bar"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/hmhi_catalog_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/divider_bar"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:text="Social"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_big_size" />

        <ImageView
            android:id="@+id/hmhi_show_more_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_download_manager_arrow_down" />
    </RelativeLayout>

    <include
        android:id="@+id/hmhi_app_ll"
        layout="@layout/include_must_have_header_app"
        android:visibility="visible" />

</LinearLayout>