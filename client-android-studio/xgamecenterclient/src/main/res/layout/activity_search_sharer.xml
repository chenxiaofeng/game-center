<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sharing_fl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_bg_drawable" >

    <ImageView
        android:id="@+id/bg_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/zdca_searching_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:text="@string/sharing_searching" />

    <ImageView
        android:id="@+id/zdca_scan_o"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/scan" />

    <ImageView
        android:id="@+id/zdca_scan_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/scan" />

    <ImageView
        android:id="@+id/zdca_scan_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/scan" />

    <include
        android:id="@+id/rl_title_bar"
        layout="@layout/main_header" />

    <!-- 5个设备 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.3" >

            <LinearLayout
                android:id="@+id/zdca_receive_device_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/first_device_layout_marginTop"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/img_1"
                        style="@style/autoHotSpotIvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_chioceDevice_iv1"
                        style="@style/autoHotSpotIvChioceStyle"
                        android:background="@drawable/ic_option_selected"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.x.publics.utils.MarqueeText
                        android:id="@+id/zdca_receive_device_tv1"
                        style="@style/marqueeTvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_device_connecting_stateIv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@anim/connecting_state"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/connection_stateTv1"
                        style="@style/autoHotSpotTvStyle"
                        android:background="@drawable/share_history_button_d"
                        android:text="@string/connection_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.25"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/zdca_receive_device_layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/img_2"
                        style="@style/autoHotSpotIvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_chioceDevice_iv2"
                        style="@style/autoHotSpotIvChioceStyle"
                        android:background="@drawable/ic_option_selected"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.x.publics.utils.MarqueeText
                        android:id="@+id/zdca_receive_device_tv2"
                        style="@style/marqueeTvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_device_connecting_stateIv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@anim/connecting_state"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/connection_stateTv2"
                        style="@style/autoHotSpotTvStyle"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_history_button_d"
                        android:text="@string/connection_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zdca_receive_device_layout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/img_3"
                        style="@style/autoHotSpotIvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_chioceDevice_iv3"
                        style="@style/autoHotSpotIvChioceStyle"
                        android:background="@drawable/ic_option_selected"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.x.publics.utils.MarqueeText
                        android:id="@+id/zdca_receive_device_tv3"
                        style="@style/marqueeTvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_device_connecting_stateIv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@anim/connecting_state"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/connection_stateTv3"
                        style="@style/autoHotSpotTvStyle"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_history_button_d"
                        android:text="@string/connection_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/zdca_receive_device_layout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="-30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/img_4"
                        style="@style/autoHotSpotIvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_chioceDevice_iv4"
                        style="@style/autoHotSpotIvChioceStyle"
                        android:background="@drawable/ic_option_selected"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.x.publics.utils.MarqueeText
                        android:id="@+id/zdca_receive_device_tv4"
                        style="@style/marqueeTvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_device_connecting_stateIv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@anim/connecting_state"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/connection_stateTv4"
                        style="@style/autoHotSpotTvStyle"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_history_button_d"
                        android:text="@string/connection_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zdca_receive_device_layout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/img_5"
                        style="@style/autoHotSpotIvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_chioceDevice_iv5"
                        style="@style/autoHotSpotIvChioceStyle"
                        android:background="@drawable/ic_option_selected"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.x.publics.utils.MarqueeText
                        android:id="@+id/zdca_receive_device_tv5"
                        style="@style/marqueeTvStyle" />

                    <ImageView
                        android:id="@+id/zdca_receive_device_connecting_stateIv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@anim/connecting_state"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/connection_stateTv5"
                        style="@style/autoHotSpotTvStyle"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_history_button_d"
                        android:text="@string/connection_failed"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_my_head"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size" />

        <TextView
            android:id="@+id/zdca_fmNickName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apps_sharing"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>

</FrameLayout>
